<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Mongoose Flights</title>
</head>
<body>
    <nav>
        <header>
          <a href="/" class="airplane"><img src="/images/airplane.svg" alt="airplane"/></a>
          <h1>Mongoose Flight</h1>
        </header>
        <a href="/">Home</a> 
        || 
        <a href="/flights/new">New Flight</a> 
        || 
        <a href="/flights">All Flights</a>
    </nav>
    <table>
        <thead>
            <tr>
                <th class="infoBar"> Delete </th>  <!-- Add for delete -->
                <th class="infoBar"> Airline </th>
                <th class="infoBar"> Airport </th>
                <th class="infoBar"> Flight Number </th>
                <th class="infoBar"> Departure Date </th>
                <th class="infoBar"> More Info </th>
            </tr>
        </thead>
        <tbody>
        <!-- Write the line of EJS to iterate over movies using forEach -->
        <% flights.forEach(function(f) { %>  
            <tr>
                <!-- Delete just added -->
                <td>
                    <form action="/flights/<%= f._id %>?_method=DELETE"
                    class="delete-form" method="POST">
                        <button class="deleBtn" type="submit">X</button>
                    </form>
                </td>
                <!-- ^^^^^^^^^^^^^^^^^^^^ -->
                <td class="airlineCss"><%= f.airline %></td>
                <td class="airportCss"><%= f.airport %></td>
                <td class="flightNo"><%= f.flightNo %></td>
                <td class="dates"><%= f.departs.toLocaleDateString() %></td>
                <td><a class="detailsCss" href="/flights/<%= f._id %>">DETAILS</a></td>
            </tr>
        <!-- Close the forEach using EJS here -->
        <% }); %>
        </tbody>
    </table>
</body>
</html>